pipeline {
    agent any
    tools {
        maven 'Maven' 
    }
    stages {
        stage("Test") {
            steps {
                sh "mvn --version"
                slackSend channel: 'test', message: 'Job Started'
            }
        }
        stage("Build") {
            steps {
                sh "mvn package"
            }
        }
        stage("Deploy on Test") {
            steps {
                // Add deployment steps for test environment
                // Example:
                // sh "deploy_script.sh test"
            }
        }
        stage("Deploy on Prod") {
            input {
                message "Should we continue?"
                ok "Yes we Should"
            }
            steps {
                // Add deployment steps for production environment
                // Example:
                // sh "deploy_script.sh prod"
            }
        }
    }
    post {
        always {
            echo "========always========"
        }
        success {
            echo "========pipeline executed successfully ========"
            slackSend channel: 'test', message: 'Success'
        }
        failure {
            echo "========pipeline execution failed========"
            slackSend channel: 'test', message: 'Job Failed'
        }
    }
}
